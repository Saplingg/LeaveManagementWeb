<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.url">jdbc:sqlserver://localhost:1433;databaseName=FALL25_Assignment;encrypt=false</property>
        <property name="connection.username">sa</property>
        <property name="connection.password">123</property> <property name="dialect">org.hibernate.dialect.SQLServer2012Dialect</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <property name="current_session_context_class">thread</property>

        <mapping class="com.company.model.User"/>
        <mapping class="com.company.model.Role"/>
        <mapping class="com.company.model.Feature"/>
        <mapping class="com.company.model.Employee"/>
        <mapping class="com.company.model.Division"/>
        <mapping class="com.company.model.Enrollment"/>
        <mapping class="com.company.model.RequestForLeave"/>
        <mapping class="com.company.model.RequestHistory"/>
        </session-factory>
</hibernate-configuration>